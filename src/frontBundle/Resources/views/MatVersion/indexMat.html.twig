    </ul>

    <div id="portfolio" class="section black">
        <div class="container">
            <div class="gallery row">
            {% for film in films %}
                <div class="col l3 m6 s12 gallery-item gallery-expand gallery-filter {{ film.genre.nom }}">
                    <div class="gallery-curve-wrapper">
                        <a class="gallery-cover gray">
                            <img src="{{ asset(film.webPath2) }}" alt="{{ film.nom }}" title="{{ film.nom }}">
                        </a>
                        {#<div class="gallery-header">
                            <span>Workspace</span>
                        </div>#}
                        <div class="gallery-body">
                            <div class="title-wrapper">
                                <h3>{{ film.nom }}</h3>
                                <p class="price">Titre Fr. : {{ film.titreFrance }}</p>
                            </div>
                            <p class="price">Réalisateur : {{ film.director }}</p>
                            <p class="price">Année : {{ film.dateSortie|date("Y") }}</p>
                            <p class="price">Pays : {{ film.pays }}</p>
                            <img src="{{ asset(film.webPath("md")) }}" alt="{{ film.nom }}-poster" title="Affiche de {{ film.nom }}">
                            <p class="description">{{ film.synopsis }}</p>
                            <ul class="collapsible" data-collapsible="expandable">
                                <li>
                                    <div class="collapsible-header" style="text-align: center">Critique de N6NIKITA</div>
                                    <div class="collapsible-body"><blockquote>{{ film.reviewN6nikita|raw|default("pas de critique pour le moment") }}</blockquote></div>
                                </li>
                                <li>
                                    <div class="collapsible-header" style="text-align: center">Critique de N6MARZONI</div>
                                    <div class="collapsible-body"><blockquote>{{ film.reviewN6marzoni|raw|default("pas de critique pour le moment") }}</blockquote></div>
                                </li>
                                <li>
                                    <div class="collapsible-header" style="text-align: center">Critique de N6TYRELL</div>
                                    <div class="collapsible-body"><blockquote>{{ film.reviewN6tyrell|raw|default("pas de critique pour le moment") }}</blockquote></div>
                                </li>
                                <li>
                                    <div class="collapsible-header" style="text-align: center">Critique de N6PALM</div>
                                    <div class="collapsible-body"><blockquote>{{ film.reviewN6palm|raw|default("pas de critique pour le moment") }}</blockquote></div>
                                </li>
                            </ul>
                            {#<iframe width="640" height="360" src="https://www.youtube.com/embed/{{ film.trailer }}" frameborder="0" allowfullscreen></iframe>#}
                        </div>
                        <div class="gallery-action">
                            <a class="btn-floating btn-large waves-effect waves-light"><i class="material-icons">favorite</i></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div> <!-- gallery -->
        </div> <!-- container -->
    </div> <!-- portfolio -->

{% endblock %}