        <li><a href="no-image.html"><i class="material-icons">texture</i>No Image Expand</a></li>
    </ul>

    <div id="portfolio" class="section grey darken-4">
        <div class="container">
            <div class="gallery row">
            {% for film in films %}
                <div class="col l2 m3 s6 gallery-item gallery-expand gallery-filter {{ film.genre.nom }}">
                    <div class="gallery-curve-wrapper">
                        <a class="gallery-cover gray">
                            <img src="{{ asset(film.webPath2) }}" style="max-width: 100%;height: auto;" alt="{{ film.nom }}" title="{{ film.nom }}">
                        </a>
                        <div class="gallery-body">
                            <div class="title-wrapper">
                                <h3>{{ film.nom }}</h3>
                                <i class="material-icons right yellow-text">grade</i>
                                <i class="material-icons right yellow-text">grade</i>
                                <i class="material-icons right yellow-text">grade</i>
                                <i class="material-icons right yellow-text">grade</i>
                                <i class="material-icons right yellow-text">grade</i>
                            </div>
                            <div class="col l3 m3 s12">
                                <img src="{{ asset(film.webPath("md")) }}">
                            </div>
                            <div class="col l4 m4 s12">
                                <table class="bordered">
                                    <tr>
                                        <td class="grey-text">Réalisateur</td>
                                        <td>{{ film.director }}</td>
                                    </tr>
                                    <tr>
                                        <td class="grey-text">Année</td>
                                        <td>{{ film.dateSortie|date("Y") }}</td>
                                    </tr>
                                    <tr>
                                        <td class="grey-text">Pays</td>
                                        <td>{{ film.pays }}</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col l8 m8 s12">
                                <p class="description">{{ film.synopsis }}</p>
                            </div>
                            <div class="col s12">
                                <ul class="collapsible" data-collapsible="accordion">
                                    <li>
                                        <div class="collapsible-header center-align">Critique de N6NIKTA</div>
                                        <div class="collapsible-body"><p class="description">{{ film.reviewN6nikita|raw|default("pas de critique pour le moment") }}</p></div>
                                    </li>
                                    <li>
                                        <div class="collapsible-header center-align">Critique de N6MARZONI</div>
                                        <div class="collapsible-body"><blockquote>{{ film.reviewN6marzoni|raw|default("pas de critique pour le moment") }}</blockquote></div>
                                    </li>
                                    <li>
                                        <div class="collapsible-header center-align">Critique de N6TYRELL</div>
                                        <div class="collapsible-body"><blockquote>{{ film.reviewN6tyrell|raw|default("pas de critique pour le moment") }}</blockquote></div>
                                    </li>
                                    <li>
                                        <div class="collapsible-header center-align">Critique de N6PALM</div>
                                        <div class="collapsible-body"><blockquote>{{ film.reviewN6palm|raw|default("pas de critique pour le moment") }}</blockquote></div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div> {#gallery-wrapper#}
                </div> {#gallery-expand#}
            {% endfor %}
            </div> <!-- gallery -->
        </div> <!-- container -->
    </div> <!-- portfolio -->

{% endblock %}