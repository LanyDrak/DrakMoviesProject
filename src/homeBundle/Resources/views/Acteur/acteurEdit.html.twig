{% extends 'homeBundle::layout.html.twig' %}

{%  block content %}
    <div class="col-lg-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title"><span class="fa fa-film"></span>  Modifier un acteur/actrice</h3>
            </div>
            <div class="box-body">
                {{ form_start(editFormActeur, {attr: {novalidate: 'novalidate'}}) }}
                {{ form_errors(editFormActeur) }}
                <div class="form-group">
                    {{ form_label(editFormActeur.nom, "Nom :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(editFormActeur.nom) }}
                    {{ form_widget(editFormActeur.nom, {attr: {class:"form-control"}}) }}
                </div>
                <div  class="form-group">
                    {{ form_label(editFormActeur.prenom,  "Prénom :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(editFormActeur.prenom) }}
                    {{ form_widget(editFormActeur.prenom,  {attr: {class:"form-control"}}) }}
                </div>
                <div  class="form-group">
                    {{ form_label(editFormActeur.file,  "Chargement de la photo :", {label_attr: {class:"label label-primary"}}) }}
                    {{ form_widget(editFormActeur.file, {attr: {class:"", type:"file"}}) }}
                </div>
                <div  class="form-group">
                    {{ form_label(editFormActeur.dateNaissance,  "Date de naissance :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(editFormActeur.dateNaissance) }}
                    {{ form_widget(editFormActeur.dateNaissance) }}
                </div>
                <div class="form-group">
                    {{ form_label(editFormActeur.nationalite, "Nationalité :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(editFormActeur.nationalite) }}
                    {{ form_widget(editFormActeur.nationalite, {attr: {class:"form-control"}}) }}
                </div>
                <div  class="form-group">
                    {{ form_label(editFormActeur.films,  "Films :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(editFormActeur.films) }}
                    {{ form_widget(editFormActeur.films) }}
                </div>
                <div class="box-footer">
                    <div  class="form-group">
                        {{ form_widget(editFormActeur.modifier,  {attr: {class:"btn btn-primary"}}) }}
                        <a class="btn btn-danger pull-right" href="{{ path('acteur_homepage') }}">Annuler</a>
                    </div>
                </div>
                {{ form_end(editFormActeur) }}
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}