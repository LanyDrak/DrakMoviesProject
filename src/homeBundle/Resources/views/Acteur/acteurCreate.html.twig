{% extends 'homeBundle::layout.html.twig' %}

{%  block content %}
    <div class="col-lg-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title"><span class="fa fa-film"></span>  Ajouter un acteur/actrice</h3>
            </div>
            <div class="box-body">
                {{ form_start(formActeur, {attr: {novalidate: 'novalidate'}}) }}
                {{ form_errors(formActeur) }}
                <div class="form-group">
                    {{ form_label(formActeur.nom, "Nom :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(formActeur.nom) }}
                    {{ form_widget(formActeur.nom, {attr: {class:"form-control"}}) }}
                </div>
                <div  class="form-group">
                    {{ form_label(formActeur.prenom,  "Prénom :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(formActeur.prenom) }}
                    {{ form_widget(formActeur.prenom,  {attr: {class:"form-control"}}) }}
                </div>
                <div  class="form-group">
                    {{ form_label(formActeur.file,  "Chargement de la photo :", {label_attr: {class:"label label-primary"}}) }}
                    {{ form_widget(formActeur.file, {attr: {class:"", type:"file"}}) }}
                </div>
                <div  class="form-group">
                    {{ form_label(formActeur.dateNaissance,  "Date de naissance :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(formActeur.dateNaissance) }}
                    {{ form_widget(formActeur.dateNaissance) }}
                </div>
                <div class="form-group">
                    {{ form_label(formActeur.nationalite, "Nationalité :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(formActeur.nationalite) }}
                    {{ form_widget(formActeur.nationalite, {attr: {class:"form-control"}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formActeur.bio, "Biographie :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(formActeur.bio) }}
                    {{ form_widget(formActeur.bio, {attr: {class:"form-control"}}) }}
                </div>
                <div  class="form-group">
                    {{ form_label(formActeur.films,  "Films :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(formActeur.films) }}
                    {{ form_widget(formActeur.films) }}
                </div>
                <div class="box-footer">
                    <div  class="form-group">
                        {{ form_widget(formActeur.ajouter,  {attr: {class:"btn btn-primary"}}) }}
                        <a class="btn btn-danger pull-right" href="{{ path('acteur_homepage') }}">Annuler</a>
                    </div>
                </div>
                {{ form_end(formActeur) }}
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}