{% extends 'homeBundle::layout.html.twig' %}

{%  block content %}
    <div class="col-lg-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title"><span class="fa fa-film"></span>  Modifier une cat√©gorie de film</h3>
            </div>
            <div class="box-body">
                {{ form_start(editGenreForm, {attr: {novalidate: 'novalidate'}}) }}
                {{ form_errors(editGenreForm) }}
                <div class="form-group">
                    {{ form_label(editGenreForm.nom, "Nom :", {label_attr: {class:"label label-default"}}) }}
                    {{ form_errors(editGenreForm.nom) }}
                    {{ form_widget(editGenreForm.nom, {attr: {class:"form-control"}}) }}
                </div>
                <div class="box-footer">
                    <div  class="form-group">
                        {{ form_widget(editGenreForm.modifier,  {attr: {class:"btn btn-primary"}}) }}
                        <a class="btn btn-danger pull-right" href="{{ path('genre_homepage') }}">Annuler</a>
                    </div>
                </div>
                {{ form_end(editGenreForm) }}
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}