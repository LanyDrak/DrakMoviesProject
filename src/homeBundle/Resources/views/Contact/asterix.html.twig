{% extends 'homeBundle::layout.html.twig' %}

{%  block content %}
<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title"><span class="glyphicon glyphicon-envelope"></span> Les Annotations !</h3>
        {% for flash_message in app.session.flashbag.get('success_mail') %}
            <div class="alert alert-success">
                {{ flash_message }}
            </div>
        {% endfor %}
    </div>
    <div class="box-body">
        {{ form_start(formAsterix, {attr:{novalidate: 'novalidate'}}) }}
            {{ form_errors(formAsterix) }}
            <div class="form-group">
            {{ form_row(formAsterix.nom) }}
            </div>
            <div class="form-group">
            {{ form_row(formAsterix.message) }}
            </div>
            <div class="form-group">
            {{ form_row(formAsterix.email) }}
            </div>

            {{ form_rest(formAsterix) }}

            <input type="submit" />
        {{ form_end(formAsterix) }}
    </div>
</div>
{% endblock %}