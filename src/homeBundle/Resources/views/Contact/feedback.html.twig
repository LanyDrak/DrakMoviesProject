{% extends 'homeBundle::layout.html.twig' %}

{%  block content %}
<div class="col-lg-6">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title"><span class="glyphicon glyphicon-repeat"></span> Formulaire de feedback</h3>
            {% for flash_message in app.session.flashbag.get('success_mail') %}
                <div class="alert alert-success">
                    {{ flash_message }}
                </div>
            {% endfor %}
        </div>
        <div class="box-body">
            {{ form_start(formFeedback, {attr: {novalidate: 'novalidate'}}) }}
            {{ form_errors(formFeedback) }}
            <div class="form-group">
                {{ form_label(formFeedback.lastname, "Nom :", {label_attr: {class:"label label-primary"}}) }}
                {{ form_errors(formFeedback.lastname) }}
                {{ form_widget(formFeedback.lastname, {attr: {class:"form-control", placeholder:"Nom"}}) }}
            </div>
            <div class="form-group">
                {{ form_label(formFeedback.firstname, "Prénom :", {label_attr: {class:"label label-primary"}}) }}
                {{ form_errors(formFeedback.firstname) }}
                {{ form_widget(formFeedback.firstname, {attr: {class:"form-control", placeholder:"Prénom"}}) }}
            </div>
            <div class="form-group">
                {{ form_label(formFeedback.select, "Sélectionnez :", {label_attr: {class:"label label-primary"}}) }}
                {{ form_errors(formFeedback.select) }}
                {{ form_widget(formFeedback.select, {attr: {class:"form-control", placeholder:"Select..."}}) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFeedback.email, "E-mail :", {label_attr: {class:"label label-primary"}}) }}
                {{ form_errors(formFeedback.email) }}
                {{ form_widget(formFeedback.email, {attr: {class:"form-control", placeholder:"E-mail"}}) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFeedback.message_perso,  "Message :", {label_attr: {class:"label label-primary"}}) }}
                {{ form_errors(formFeedback.message_perso) }}
                {{ form_widget(formFeedback.message_perso,  {attr: {class:"form-control", placeholder:"Message additionnel"}}) }}
            </div>
            <div class="form-group">
                {{ form_label(formFeedback.message_perso,  "Fichier joint :", {label_attr: {class:"label label-primary"}}) }}
                {{ form_widget(formFeedback.file, {attr: {class:"", type:"file"}}) }}
            </div>
            <div  class="form-group">
                {{ form_widget(formFeedback.newsletter) }}
                {{ form_label(formFeedback.newsletter, "Inscription à la newsletter") }}
                {{ form_errors(formFeedback.newsletter) }}
            </div>
            <div  class="form-group">
                {{ form_widget(formFeedback.Send,  {attr: {class:"btn btn-primary btn-lg btn-block"}}) }}
            </div>
            {{ form_end(formFeedback) }}
        </div>
    </div>
</div>

