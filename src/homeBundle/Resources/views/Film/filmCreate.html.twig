{% extends 'homeBundle::layout.html.twig' %}

{%  block content %}
<div class="col-lg-6">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title"><span class="fa fa-film"></span>  Ajouter un film</h3>
        </div>
        <div class="box-body">
            {{ form_start(formFilm, {attr: {novalidate: 'novalidate'}}) }}
            {{ form_errors(formFilm) }}
            <div class="form-group">
                {{ form_label(formFilm.nom, "Titre du film :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.nom) }}
                {{ form_widget(formFilm.nom, {attr: {class:"form-control"}}) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.file,  "Chargement de l'affiche :", {label_attr: {class:"label label-primary"}}) }}
                {{ form_widget(formFilm.file, {attr: {class:"", type:"file"}}) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.pays,  "Pays :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.pays) }}
                {{ form_widget(formFilm.pays,  {attr: {class:"form-control"}}) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.director,  "Réalisateur :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.director) }}
                {{ form_widget(formFilm.director,  {attr: {class:"form-control"}}) }}
            </div>
            <div class="form-group">
                {{ form_label(formFilm.genre,  "Genre :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.genre) }}
                {{ form_widget(formFilm.genre) }}
            </div>
            <div class="form-group">
                {{ form_label(formFilm.acteurs,  "Acteurs :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.acteurs) }}
                {{ form_widget(formFilm.acteurs) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.dateSortie,  "Date de sortie :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.dateSortie) }}
                {{ form_widget(formFilm.dateSortie) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.budget,  "Budget :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.budget) }}
                {{ form_widget(formFilm.budget,  {attr: {class:"form-control"}}) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.synopsis,  "Synopsis :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.synopsis) }}
                {{ form_widget(formFilm.synopsis,  {attr: {class:"form-control"}}) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.numVisa,  "Numéro de Visa d'exploitation :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.numVisa) }}
                {{ form_widget(formFilm.numVisa,  {attr: {class:"form-control"}}) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.boxOfficeFrance,  "Box Office France :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.boxOfficeFrance) }}
                {{ form_widget(formFilm.boxOfficeFrance,  {attr: {class:"form-control"}}) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.duree,  "Durée :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.duree) }}
                {{ form_widget(formFilm.duree,  {attr: {class:"form-control"}}) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.noteSpectateur,  "Note Spectateur :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.noteSpectateur) }}
                {{ form_widget(formFilm.noteSpectateur) }}
            </div>
            <div  class="form-group">
                {{ form_label(formFilm.trailer,  "ID url trailer YouTube :", {label_attr: {class:"label label-default"}}) }}
                {{ form_errors(formFilm.trailer) }}
                {{ form_widget(formFilm.trailer) }}
            </div>
        <div class="box-footer">
            <div  class="form-group">
                {{ form_widget(formFilm.ajouter,  {attr: {class:"btn btn-primary"}}) }}
                <a class="btn btn-danger pull-right" href="{{ path('acteur_homepage') }}">Annuler</a>
            </div>
        </div>
            {{ form_end(formFilm) }}
        </div>
    </div>
</div>
<div class="clearfix"></div>
{% endblock %}