{% extends '::base.html.twig' %}

{% block title %}DrakMOVIES Login{% endblock %}
{% block bodyclass %}<body class="hold-transition login-page">{% endblock %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="login-box">
    <div class="login-logo">
        <a href="{{ path('home_homepage') }}"><b>Drak</b>MOVIES</a>
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">Connection</p>

        <form id="signin-form_id" class="panel" action="{{ path('homeBundle_login_check') }}" method="post">
            <div class="form-group has-feedback">
                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Login ou Email" />
            </div>
            <div class="form-group has-feedback">
                <input type="password" id="password" name="_password" placeholder="Password"/>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <div class="icheckbox_square-blue" style="position: relative;">
                            <label>
                                <input type="checkbox"> Se souvenir de moi
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>

{% endblock %}